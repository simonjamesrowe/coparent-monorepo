{
  "name": "coparent-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "CoParent monorepo - unified codebase for API, UI, and documentation",
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter api",
    "dev:ui": "turbo run dev --filter ui",
    "build": "turbo run build",
    "build:api": "turbo run build --filter api",
    "build:ui": "turbo run build --filter ui",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:dev": "docker-compose -f docker/docker-compose.yml up",
    "docker:build:api": "docker build -f apps/api/Dockerfile -t coparent-api:latest .",
    "docker:build:ui": "docker build -f apps/ui/Dockerfile -t coparent-ui:latest ."
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/parser": "^6.13.2",
    "@typescript-eslint/eslint-plugin": "^6.13.2"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
